@* ReSharper disable once CheckNamespace *@
@namespace SimpleBlazorGrid.Internal

<svg class="simpleDG_glyph @(Active ? "simpleDG_glyph_active" : "")" viewBox="0 0 20 20" style="position: absolute; height: 100%">
    @if (!Active)
    {
        <polygon points="0,2 10,18 20,2"/>
    }
    else
    {
        @if (Ascending)
        {
            <polygon points="0,2 10,18 20,2"/>
        }
        else
        {
            <polygon points="0,18 10,2 20,18"/>
        }
    }
</svg>

@code {
    [Parameter]
    public bool Active { get; set; }

    [Parameter]
    public bool Ascending { get; set; }
}