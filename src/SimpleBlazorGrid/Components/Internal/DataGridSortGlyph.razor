@* ReSharper disable once CheckNamespace *@
@namespace SimpleBlazorGrid

<svg class="@(Active ? "simpleDG_sortable_glyph_active" : "")" height="15" width="20">
    @if (!Active)
    {
        <polygon points="10,0 0,15 20,15"/>
    }
    else
    {
        @if (Ascending)
        {
            <polygon points="10,15 0,0 20,0"/>
        }
        else
        {
            <polygon points="10,0 0,15 20,15"/>
        }
    }
</svg>

@code {
    [Parameter]
    public bool Active { get; set; }

    [Parameter]
    public bool Ascending { get; set; }
}