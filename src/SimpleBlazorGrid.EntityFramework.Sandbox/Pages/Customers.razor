@page "/Customers"

@using SimpleBlazorGrid.EntityFramework.Sandbox.Infrastructure
@using SimpleBlazorGrid.EntityFramework.Sandbox.Domain
@using SimpleBlazorGrid.EntityFramework.DataSource

<SimpleGrid TType="Customer"
            Title="Customers"
            Selectable="@true"
            DataSource="@(new SimpleDataGridEntityFrameworkSource<Customer>(Context.Customers))">
    <Filters>
        <SimpleFilter TType="Customer" Property="@nameof(Customer.CustomerId)"/>
    </Filters>
    <Columns>
        <SimpleColumn TType="Customer" Property="@nameof(Customer.CustomerId)" Sortable="true" Heading="Id"/>
    </Columns>
</SimpleGrid>

@code {
    public DatabaseContext Context { get; set; } = new DatabaseContext();
}