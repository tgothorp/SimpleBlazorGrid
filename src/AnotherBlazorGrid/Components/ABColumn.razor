@* ReSharper disable once CheckNamespace *@
@namespace AnotherBlazorGrid

@using AnotherBlazorGrid.Interfaces

@typeparam TType

@implements AnotherBlazorGrid.Interfaces.IColumn<TType>

@code {
    [CascadingParameter]
    public IDataGrid<TType> DataGrid { get; set; }

    [Parameter]
    public string Property { get; set; }

    [Parameter]
    public string Heading { get; set; }
    
    [Parameter]
    public RenderFragment<TType> ABColumnFormat { get; set; }

    protected override void OnInitialized()
    {
        DataGrid.AddColumn(this);
        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        Heading ??= Property;
        base.OnParametersSet();
    }
}