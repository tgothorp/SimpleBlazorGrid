@if (Parent.ActivePage == this)
{
    @ChildContent
}

@code {
    [CascadingParameter]
    public required TabControl Parent { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public required string TabName { get; set; }

    protected override void OnInitialized()
    {
        Parent?.AddPage(this);
        base.OnInitialized();
    }
}