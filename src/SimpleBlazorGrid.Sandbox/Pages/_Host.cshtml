@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SimpleBlazorGrid.Sandbox.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <title>Simple Blazor Grid</title>
    <meta charset="utf-8"/>
    <base href="~/"/>
    <link rel="stylesheet" href="css/site.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@picocss/pico@1/css/pico.min.css" asp-fallback-href="~/css/pico.min.css">
    <link rel="stylesheet" href="~/_content/SimpleBlazorGrid/css/simpleDG.css"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered"/>
</head>
<body>
<component type="typeof(App)" render-mode="ServerPrerendered"/>

<div id="blazor-error-ui">
    <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
    </environment>
    <environment include="Development">
        An unhandled exception has occurred. See browser dev tools for details.
    </environment>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<script src="_framework/blazor.server.js"></script>
</body>
</html>